<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TempoAgora.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20">

            <Entry 
                x:Name="txt_cidade"
                Placeholder="Digite o nome da cidade"
                FontSize="18"
                WidthRequest="300"
            />

            <Button 
                Text="Buscar"
                Clicked="button_clicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="150"
            />

            <Frame 
                BorderColor="#2196F3"
                BackgroundColor="White"
                CornerRadius="10"
                Padding="15"
                WidthRequest="300">
                
                <Label 
                    x:Name="lbl_res"
                    FontSize="16"
                    LineBreakMode="WordWrap"
                    TextColor="Black"
                />
            </Frame>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
